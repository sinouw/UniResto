<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/fragment">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="50dp"
                    android:src="@drawable/abcd"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A propos de nous"
                    android:textColor="@color/o"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textStyle="italic">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Restaurant Universitaire De Nabeul"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"


                    android:textColorHighlight="@color/colorPrimary"
                    android:gravity="center"
                    android:textStyle="bold"
                    >

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="__________"
                    android:textColor="@color/orange"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"></TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:text="Bienvenue au restaurant universitaire de Nabeul. Depuis 1995, offrant un repas équilibré."
                        android:textColor="@color/black"></TextView>

                </LinearLayout>
                <ImageView
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:id="@+id/image1"
                    android:layout_marginBottom="50dp"
                    android:src="@drawable/background01"

                    ></ImageView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/horaire"
                    android:layout_marginBottom="50dp"></ImageView>


                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginBottom="20dp"></fragment>

            </LinearLayout>
        </FrameLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>